<% provide(:title, t(".users")) %>
<h1><%= t(".users") %></h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><strong>ID | </strong></td>
      <td><strong>Email</strong></td>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td> </td>
        <td><%= link_to t(".show"), user_path(user) %></td>
        <td> </td>
        <td><%= link_to t(".edit"), edit_user_path(user) %></td>
        <td> </td>
        <td><%= link_to t(".destroy"), user, method: :delete, data: { confirm: t(".confirm") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t(".new_user"), new_user_path %>
