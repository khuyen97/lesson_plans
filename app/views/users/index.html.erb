<% provide(:title, "Users") %>
<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><strong>ID | </strong></td>
      <td><strong>Email</strong></td>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td> </td>
        <td><%= link_to 'Show', user %></td>
        <td> </td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td> </td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

