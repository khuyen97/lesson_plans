<% @subjects.each do |subject| %>
  <% if params[:subject_id] == subject.id.to_s %>
    <li>
      <%= check_box_tag "subject_id", subject.id, true %> 
      <span><%= subject.name %></span>
      <span class="text-muted" title="<%= t ".count" %>">(<%= subject.lessons.where(:status => 1).count %>)</span>
    </li>
  <% else %>
    <li>
      <%= check_box_tag "subject_id", subject.id %> 
      <span><%= subject.name %></span>
      <span class="text-muted" title="<%= t ".count" %>">(<%= subject.lessons.where(:status => 1).count %>)</span>
    </li>
  <% end %>
<% end %>
