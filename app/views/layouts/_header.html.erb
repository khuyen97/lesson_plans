<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <span>
      <a class="navbar-brand" href="<%= lessons_path %>">
        <%= image_tag("logo.png", :alt => "logo") %><span class="nav-text"><%= t ".lesson" %></span>
      </a>
    </span>   
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to t(".new_lesson"), new_lesson_path, class: "nav-link", "data-turbolinks" => false %>          
        </li>
      </ul>
      <% if !user_signed_in? %>
        <%= link_to t(".log_in"), new_user_session_path, class: "nav-link" %>
        <%= link_to t(".sign_up"), new_user_registration_path, class: "nav-link" %>
      <% else %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t ".my_account" %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu dropdown-menu-right">
            <% if !current_user.admin? %>
              <li><strong><%= current_user.email %></strong></li>
              <li class="dropdown-divider"></li>
              <li><%= link_to t(".my_account"), edit_user_registration_path, class: "dropdown-item" %></li>
              <li class="dropdown-divider"></li>
              <li><%= link_to t(".log_out"), destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
            <% elsif current_user.admin? %>
              <li><strong><%= current_user.email %></strong></li>
              <li class="dropdown-divider"></li>
              <li><%= link_to t(".my_account"), edit_user_registration_path, class: "dropdown-item" %></li>
              <li><%= link_to t(".users"), users_path, class: "dropdown-item" %></li>
              <li class="dropdown-divider"></li>
              <li><%= link_to t(".log_out"), destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
            <% end %>
          </ul>
        </li>
      <% end %>  
  </nav>
</header>
