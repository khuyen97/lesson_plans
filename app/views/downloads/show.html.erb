<%= render "lessons/lesson_download", lesson: @lesson %>
<div class="lesson-details bg-white border border-info">
  <div class="row">
    <div class="col-md">
      <strong>Người tạo: </strong>
      <%= link_to @lesson.user.email, user_path(@lesson.user) %>
    </div>
    <div class="col-md">
      <strong>Khối: </strong>
      <%= @lesson.grade.name %>
    </div>

    <div class="col-md">
      <strong>Môn học: </strong>
      <%= @lesson.subject.name %>
    </div>

    <div class="col-md">
      <strong>Bài: </strong>
      <%= @lesson.title_lesson %>
    </div>
    <div class="col-md">
      <strong>Tiết: </strong>
      <%= @lesson.title_unit %>
    </div>
    <div class="col-md text-center">
      <span class="text-muted">http://demo1.saokhuee.com/</span>
    </div>
  </div>
</div>
