<% provide(:title, "Log in") %>
<div class="row">
  <div class="col-md-4"></div>

  <div class="col-md-4">
    <h2>Sign In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email_address %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm" %>
      </div>
    
      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-sm" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Sign In", class: "btn btn-primary", style: "width: 100%" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>

  <div class="col-md-4"></div>
</div>

