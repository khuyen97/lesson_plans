<% provide(:title, t(".sign_in")) %>
<div class="row">
  <div class="col-md-4"></div>

  <div class="col-md-4">
    <div class="lesson-details bg-white border border-info">
      <h2><%= t ".sign_in" %></h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, t(".email") %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm" %>
        </div>
      
        <div class="form-group">
          <%= f.label :password, t(".password") %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-sm" %>
        </div>
      
        <div class="actions">
          <%= f.submit t(".sign_in"), class: "btn btn-primary", style: "width: 100%" %>
        </div>
      <% end %>

      <div class="or-area or-area-bottom">
        <span><%= t ".or" %></span>
      </div>
      
      <div id="choise">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

  <div class="col-md-4"></div>
</div>
