<% provide(:title, "Đăng ký") %>
<div class="row">
  <div class="col-md-4"></div>

  <div class="col-md-4">
    <h2>Create Account</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="form-group">
        <%= f.label :email_address %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm" %>
      </div>
    
      <div class="form-group">
        <%= f.label :Mật_khẩu %>
        <% if @minimum_password_length %>
        <em>(Tối thiểu <%= @minimum_password_length %> ký tự)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-sm" %>
      </div>
    
      <div class="form-group">
        <%= f.label :Xác_nhận_mật_khẩu %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-sm" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Create Account", class: "btn btn-primary", style: "width: 100%" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>      
  </div>

  <div class="col-md-4"></div>
</div>
