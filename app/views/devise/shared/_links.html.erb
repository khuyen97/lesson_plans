<%= stylesheet_link_tag "https://use.fontawesome.com/releases/v5.5.0/css/all.css" %>

<%- if controller_name != 'sessions' %>
  <span><%= t ".have_account" %></span>
  <%= link_to t(".sign_in"), new_session_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t(".forgot_password"), new_password_path(resource_name), class: "d-none" %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <span><%= t ".dont_account" %></span>
  <%= link_to t(".create_account"), new_registration_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t(".receive_confirmation"), new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t(".receive_unlock"), new_unlock_path(resource_name) %><br />
<% end -%>

<% if devise_mapping.omniauthable? %>
  <% resource_class.omniauth_providers.each do |provider| %>
    <%= link_to user_google_oauth2_omniauth_authorize_path(resource_name, provider).gsub(".user", ""), class: "google-login btn" do %>
      <i class="fab fa-google"><%= t ".google" %></i>
      <br />
    <% end %>
  <% end %>
<% end %>